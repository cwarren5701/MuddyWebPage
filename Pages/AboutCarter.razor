@page "/aboutcarter"

<PageTitle>About Carter</PageTitle>

<MudText Typo="Typo.h3">About Carter</MudText>
<MudText Typo="Typo.h6">Let's learn more about Carter!</MudText>

<MudPaper Class="d-flex align-center flex-grow-1 gap-4" Elevation="0">

</MudPaper>
<MudText Typo="Typo.body1">Hello World! My name is Carter Warren I am from Manhattan Beach, California. I am 17
    years old and I enjoy coding and playing basketball. I started computer science in 10th grade when I took AP
    Computer Science Principles. In 11th grade, I took AP Computer Science A and now I am doing CaptainCoderOrg.
</MudText>
<MudCardMedia Image="images/mb.jpg" Height="400" />
<MudCarousel Class="mud-width-full" Style="height:100px;" ShowArrows="@arrows" ShowBullets="@bullets" TData="object"
    AutoCycle="false">
    <MudCarouselItem Transition="transition" Color="@Color.Primary">
        <div class="d-flex" style="height:100%">
            <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition" Color="@Color.Secondary">
        <div class="d-flex" style="height:100%">
            <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <div class="d-flex" style="height:100%">
            <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Color="@Color.Primary" Size="@Size.Large" />
        </div>
    </MudCarouselItem>
</MudCarousel>


@code {
    private bool arrows = true;
    private bool bullets = true;
    private Transition transition = Transition.Slide;
}